@model NhaHangHaiSan.Models.EF.Category
@{
    ViewBag.Title = "Add";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="@Url.Action("Index","Home")" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="@Url.Action("Index","Category")" class="nav-link">Danh Mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="@Url.Action("Add","Category")" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Danh mục</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin danh mục thêm mới</h3>

            <div class="card-tools">

            </div>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Add", "Category", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <!-- your steps content here -->
                <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                    <div class="form-group">
                        <label>Tên danh mục</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placehoder = "Tên danh mục" })
                        @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Mô tả</label>
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", placehoder = "Mô tả" })
                    </div>
                    <div class="form-group">
                        <label>Thứ tự</label>
                        @Html.TextBoxFor(x => x.Position, new { @class = "form-control", @Value = TempData["MaxPosition"] })
                    </div>
                    <div class="form-group">
                        <label>SEO Tên danh mục</label>
                        @Html.TextAreaFor(x => x.SeoTitle, new { @class = "form-control", placehoder = "Mô tả" })
                    </div>
                    <div class="form-group">
                        <label>SEO Mô tả</label>
                        @Html.TextAreaFor(x => x.SeoDescription, new { @class = "form-control", placehoder = "Mô tả" })
                    </div>
                    <div class="form-group">
                        <label>SEO Từ khóa</label>
                        @Html.TextAreaFor(x => x.SeoKeyWords, new { @class = "form-control", placehoder = "Mô tả" })
                    </div>

                    <a href="@Url.Action("Index","Category")" class="btn btn-danger">Quay lại</a>
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
                }
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

</section>

